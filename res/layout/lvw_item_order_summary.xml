<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <android.support.v7.widget.CardView
        android:id="@+id/cvwProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        
        <RelativeLayout
	        android:id="@+id/rlProducts"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp">
    
	    <TextView
	        android:id="@+id/txtProductName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="Name"
	        android:layout_marginRight="20dp"
	        android:textSize="16sp" />
	    
	    <LinearLayout
	        android:id="@+id/llQtyTax"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true">
	        
        <TextView
	        android:id="@+id/txtProductPrice"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Rs.10"
	        android:layout_marginRight="20dp"
	        android:textSize="14sp" />
	    
	    <TextView
	        android:id="@+id/txtProductQuantity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="4"
	        android:layout_marginRight="20dp"
	        android:textSize="14sp" />
	    
	    <TextView
	        android:id="@+id/txtTaxBracket"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="14%"
	        android:textSize="14sp" />
	    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/llCostImg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true">
	    
	    <TextView
	        android:id="@+id/txtTotalProductCost"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text="Rs.100"
	        android:textStyle="bold"
	        android:textSize="16sp" />
	    
	    <ImageButton
            android:id="@+id/ibtPopupOrderSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dots"
            android:background="@null"/>
	    
	    </LinearLayout>
	    
	    </RelativeLayout>
    
    </android.support.v7.widget.CardView>

</RelativeLayout>
