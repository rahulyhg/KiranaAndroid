<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <android.support.v7.widget.CardView
        android:id="@+id/cvwProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        
        <RelativeLayout
            android:id="@+id/rlParentMyOrder"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:padding="10dp">
        
	        <RelativeLayout
	            android:id="@+id/rlMyOrder"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginBottom="10dp">
	        	
	            <TextView
	                android:id="@+id/txtTableNumber"
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:text="23"
	        		android:textSize="18sp" />
	            
	            <TextView
	                android:id="@+id/txtGrandTotal"
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_centerInParent="true" 
	        		android:text="Rs.250"
	        		android:textSize="16sp"/>
	            
	            <TextView
	                android:id="@+id/txtIsBilled"
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_alignParentRight="true"
	        		android:text="Billed"
	        		android:textColor="#006400"
	        		android:textSize="16sp" />
	        	
	        </RelativeLayout>
	        
	        <TextView
	            	android:id="@+id/txtUpdatedTime"
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_below="@+id/rlMyOrder"
	        		android:layout_alignParentRight="true"
	        		android:text="23:11:15"
	        		android:textSize="12sp" />
        
        </RelativeLayout>
    
    </android.support.v7.widget.CardView>

</RelativeLayout>
