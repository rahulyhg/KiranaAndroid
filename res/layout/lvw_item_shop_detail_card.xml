<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvwShopDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/llLoginParentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlheaderShopDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtShopName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shop Name"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"/>

                    <ImageButton
                        android:id="@+id/ibtPopupShopDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dots"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:background="@null"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlShopType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtShopType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel"
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </RelativeLayout>
                
                <LinearLayout
                    android:id="@+id/llAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtAddressLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <RelativeLayout
                        android:id="@+id/rlAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"/>

                    </RelativeLayout>

                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/llMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtMobileNumberLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <RelativeLayout
                        android:id="@+id/rlMobileNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txtMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"/>

                    </RelativeLayout>

                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/llWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtWebsiteLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <RelativeLayout
                        android:id="@+id/rlWebsite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txtWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/llTinNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtTinNumberLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tin Number"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <RelativeLayout
                        android:id="@+id/rlTinNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txtTinNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tin Number"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/txtServiceTaxLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Service Tax"
                        android:layout_weight="0.5"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <RelativeLayout
                        android:id="@+id/rlServiceTax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txtServicetax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Tax"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llServiceCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/txtServiceChargeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Service Charge"
                        android:layout_weight="0.5"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <RelativeLayout
                        android:id="@+id/rlServiceCharge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txtServiceCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Charge"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>