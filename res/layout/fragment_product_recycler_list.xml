<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_full_bg_color" >
    <Button
        android:id="@+id/btnUploadCSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="No product list found. Upload now"
        android:layout_centerInParent="true"
        android:visibility="visible" />
    <FrameLayout
         android:id="@+id/flProducts"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_below="@+id/btnUploadCSV">
	    <LinearLayout
	         android:id="@+id/llProducts"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:paddingLeft="10dp"
	         android:paddingRight="10dp">
	         <android.support.v7.widget.RecyclerView
	             android:id="@+id/rcvwProducts"
	             android:layout_width="wrap_content"
	             android:layout_height="match_parent"
	             android:scrollbars="vertical"/>
	    </LinearLayout>
    </FrameLayout>
</RelativeLayout>
